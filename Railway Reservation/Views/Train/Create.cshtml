@model Train

<h1 align="center">Add Train</h1>
<div style="width:50%; margin-left: 300px;">
    <form asp-action="Create">
        <div class="form-row">
            <div class="form-group col-md-6">

                <label asp-for="Name">Train Name:</label>
                <input type="Name" asp-for="Name" class="form-control">
            </div>
            <div class="form-group col-md-6">
                <label asp-for="RegNo">Registration Number:</label>
                <input asp-for="RegNo" class="form-control" />
            </div>
        </div>

        <div class="form-row">
            <div class="form-group col-md-4">
                <label asp-for="EconomySeats">Economy Seats</label>
                <input asp-for="EconomySeats" class="form-control" />
            </div>
            <div class="form-group col-md-4">
                <label asp-for="BusinessSeats">Business Seats</label>
                <input asp-for="BusinessSeats" class="form-control" />
            </div>
            <div class="form-group col-md-4">
                <label asp-for="AcStandardSeats">AC Standard Seats</label>
                <input asp-for="AcStandardSeats" class="form-control" />
            </div>
        </div>

        <div class="form-row">
            <div class="form-group col-md-6">
                <label asp-for="IsActive">Active</label>
                <input type="checkbox" asp-for="IsActive" class="form-control"  />

            </div>
      

            <div class="form-group col-md-6">
                <button type="submit" class="btn btn-primary" style="margin-top: 30px ;margin-left :90px">Create</button>
            </div>
        </div>



    </form>
</div>
