@model City

<h1 style="text-align:center;">Add City</h1>
<div style="width:50%; margin-left: 450px;">
    <div class="row">
        <div class="col-md-6">
            <form asp-action="Create">
                <div class="form-group">
                    <label asp-for="Name" class="control-label">City Name:</label>
                    <input asp-for="Name" type="text" id="Name" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="Distance" class="control-label">Distance:</label>
                    <input asp-for="Distance" type="number" class="form-control" id="Distance" />
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary" style="width:100%">Add City</button>
                </div>
            </form>
        </div>
    </div>
</div>



