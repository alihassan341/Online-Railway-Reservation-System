@model Fare

<h1 align="center">Add Fare</h1>
<div style="width:50%; margin: 0 auto;">
    <form asp-action="Create">
        <div class="form-row">
            <div class="form-group col-md-12">
                <label asp-for="TrainId">Train:</label>
                <select asp-for="TrainId" asp-items="@ViewBag.Trains" class="form-control">
                    <option value="">-- Select Train --</option>
                </select>
            </div>
        </div>

        <div class="form-row">
            <div class="form-group col-md-4">
                <label asp-for="EconomyFare">Economy Fare:</label>
                <input asp-for="EconomyFare" class="form-control" />
            </div>
            <div class="form-group col-md-4">
                <label asp-for="BusinessFare">Business Fare:</label>
                <input asp-for="BusinessFare" class="form-control" />
            </div>
            <div class="form-group col-md-4">
                <label asp-for="AcStandardFare">AC Standard Fare:</label>
                <input asp-for="AcStandardFare" class="form-control" />
            </div>
        </div>

        <div class="form-row">
            <div class="form-group col-md-12">
                <button type="submit" class="btn btn-primary">Create</button>
            </div>
        </div>
    </form>
</div>
